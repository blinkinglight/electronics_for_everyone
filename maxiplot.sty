\newenvironment{@vmaxima}%
 {\maxima@init
  \ifmaxima@texout
    \stepcounter{maxima@count}
    \immediate\write\maxima@out{^^Jwith_stdout("\mxpfile", print("\noexpand\\def\noexpand\\\maxima@current",lbrace),}%
